    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.cskoayan.lan.myfragmentdemo3.MainActivity">



    <fragment
        android:name="com.cskoayan.lan.myfragmentdemo3.TitleListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/fg_a"
         />

    <fragment
        android:name="com.cskoayan.lan.myfragmentdemo3.ContentFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/fg_b"
        tools:layout="@layout/fragemt_b" />

</LinearLayout>
